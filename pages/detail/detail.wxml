<!--pages/detail/detail.wxml-->
<swiper indicator-dots="true" circular="true" class="lunboItem">
<swiper-item wx:for="{{goodPic}}" wx:key="id" >
<image src="{{item.pics_big}}" mode="aspectFill"></image>
</swiper-item>
</swiper>
<view class="intro">
<view class="left">
<view class="price">￥{{goodInfo.goods_price}}</view>
<view class="title">{{goodInfo.goods_name}}</view>
<view class="trans">快递: 免运费</view>
</view>
<view class="right">
<view class="collect">
  <van-icon name="star" bind:click="isCollected" color="{{collect_color}}"/>
  <view class="font_collect">收藏</view>
</view>
</view>
</view>
<view class="sorry">
      无法获取了....
</view>
<van-goods-action class="bottom">
  <van-goods-action-icon icon="cart-o" text="购物车" info="{{goodsNum}}" link-type="switchTab"url='/pages/cart/cart'/>
  <van-goods-action-icon icon="shop-o" text="店铺" />
  <van-goods-action-button bind:click="addGood" text="加入购物车" type="warning"  />
  <van-goods-action-button text="立即购买" />
</van-goods-action>

